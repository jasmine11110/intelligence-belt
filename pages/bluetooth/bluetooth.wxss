/* pages/bluetooth/bluetooth.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 0;
}

/* 头部状态栏 */
.header {
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.status-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.connected-device {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 15rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.device-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  flex: 1;
}

.device-rssi {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 设备列表区域 */
.device-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.refresh-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #f8f8f8;
  border: 1rpx solid #e0e0e0;
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  min-width: auto;
  line-height: 1;
}

.refresh-btn:active {
  background: #e8e8e8;
}

.device-list {
  padding: 0;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.device-item:last-child {
  border-bottom: none;
}

.device-item:active {
  background: #f8f8f8;
}

.device-item[disabled] {
  opacity: 0.6;
  pointer-events: none;
}

.device-info {
  flex: 1;
  margin-right: 20rpx;
}

.device-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.device-details {
  display: flex;
  gap: 20rpx;
}

.device-id {
  font-size: 22rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.device-action {
  display: flex;
  align-items: center;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 30rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0 10rpx 0;
}

.empty-tip {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 控制面板 */
.control-panel {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.panel-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.panel-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.pressure-display {
  padding: 30rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.pressure-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
}

.pressure-value {
  font-size: 48rpx;
  font-weight: bold;
}

.mode-control {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.control-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.mode-buttons {
  display: flex;
  gap: 20rpx;
}

.mode-btn {
  flex: 1;
  height: 80rpx;
  background: #f8f8f8;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.2s ease;
}

.mode-btn:active {
  background: #667eea;
  border-color: #667eea;
  color: #fff;
}

.heating-control {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.heating-btn {
  width: 100%;
  height: 80rpx;
  background: #ff6b6b;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
  transition: all 0.2s ease;
}

.heating-btn:active {
  background: #ff5252;
  transform: translateY(2rpx);
}

.disconnect-section {
  padding: 30rpx;
}

.disconnect-btn {
  width: 100%;
  height: 80rpx;
  background: #ff4444;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  transition: all 0.2s ease;
}

.disconnect-btn:active {
  background: #ff3333;
  transform: translateY(2rpx);
}

.disconnect-btn[disabled] {
  background: #ccc;
  opacity: 0.6;
}

/* 原始数据显示 */
.data-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.raw-data-content {
  padding: 30rpx;
  background: #f8f8f8;
}

.data-text {
  font-size: 24rpx;
  color: #666;
  font-family: 'Courier New', monospace;
  word-break: break-all;
  line-height: 1.6;
}

/* 操作提示 */
.tips-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .device-details {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .mode-buttons {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .mode-btn {
    width: 100%;
  }
}

/* 动画效果 */
.device-item {
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}