.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40px;
}


.title {
  font-size: 24px;
  font-weight: bold;
  color: #e94560;
  margin-top: 20px;
}

.content {
  width: 80%;
}

.login-btn {
  width: 100%;
  height: 50px;
  background-color: #0f3460;
  color: #fff;
  font-size: 18px;
  border-radius: 25px;
  box-shadow: 0 4px 15px rgba(15, 52, 96, 0.3);
}

.login-btn:active {
  background-color: #0d2a4d;
}